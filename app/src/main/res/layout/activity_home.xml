<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".ui.HomeActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextAppearance.WhisperGames.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Let's Play!"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_settings_rounded" />
    </LinearLayout>

    <!-- Game Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/gameCarousel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="24dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/btnLeaderboard"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout" />

    <!-- Navigation / Extras -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLeaderboard"
        style="@style/Widget.WhisperGames.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/secondary"
        android:text="Leaderboard"
        app:icon="@drawable/ic_trophy"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/adBannerPlaceholder" />

    <!-- Persistent Ad Space -->
    <FrameLayout
        android:id="@+id/adBannerPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ad Space"
            android:textColor="#9E9E9E" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
